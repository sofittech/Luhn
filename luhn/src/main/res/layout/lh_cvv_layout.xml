<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/new_card_item_bg"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">


    <xyz.belvi.luhn.customTextInputLayout.inputLayouts.CardTextInputLayout

            android:id="@+id/ctil_cvv_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="CVV"
            android:textColorHint="@color/ln_colorHint"
            app:errorEnabled="true"
            app:errorTextAppearance="@style/ErrorTextStyle"
            app:passwordToggleDrawable="@drawable/payment_bank_card_info"
            app:passwordToggleEnabled="true"
            app:passwordToggleTint="@null"
            app:theme="@style/MyTextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/tiet_cvv_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawablePadding="8dp"
                android:inputType="textPassword"
                android:maxLength="3"
                android:textSize="@dimen/ln_input_size"
                app:theme="@style/MyTextInputEdit" />
        </xyz.belvi.luhn.customTextInputLayout.inputLayouts.CardTextInputLayout>

</LinearLayout>