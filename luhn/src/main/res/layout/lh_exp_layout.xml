<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:background="@drawable/new_card_item_bg"
    android:orientation="vertical"
    android:paddingLeft="15dp"
    android:paddingTop="15dp">

    <xyz.belvi.luhn.customTextInputLayout.inputLayouts.CardTextInputLayout
        android:id="@+id/ctil_expiry_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="EXPIRY DATE"
        android:textColorHint="@color/ln_colorHint"
        app:errorEnabled="true"
        app:errorTextAppearance="@style/ErrorTextStyle"
        app:passwordToggleDrawable="@drawable/payment_bank_card_info"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@null"
        app:theme="@style/MyTextInputLayout">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/tiet_exp_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:maxLength="5"
            android:fontFamily="serif"
            android:textSize="@dimen/ln_input_size"
            android:textColorHint="@color/ln_colorHint"
            app:theme="@style/MyTextInputEdit" />

    </xyz.belvi.luhn.customTextInputLayout.inputLayouts.CardTextInputLayout>

</LinearLayout>
